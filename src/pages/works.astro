---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="精選作品 | YENZ Design" description="艷世設計的精選作品集，展示品牌識別、視覺設計與虛擬形象專案。">
  <!-- Hero -->
  <section class="page-hero">
    <div class="page-hero-content">
      <span class="page-hero-label">WORKS</span>
      <h1 class="page-hero-title">精選作品</h1>
      <p class="page-hero-subtitle">Selected Works</p>
    </div>
  </section>
  
  <!-- Works Grid -->
  <section class="section section-dark">
    <div class="works-showcase">
      <!-- Work 1 -->
      <a href="/projects/foredu" class="work-showcase-item reveal">
        <div class="work-showcase-bg" style="background: linear-gradient(135deg, #1a4d3a 0%, #0d3d2e 100%);"></div>
        <div class="work-showcase-content">
          <span class="work-category">ANIMATION / IP</span>
          <h2 class="work-title">森知殿 Foredu</h2>
          <p class="work-desc">台灣原生動物教育動畫</p>
          <span class="work-link">VIEW PROJECT →</span>
        </div>
      </a>
      
      <!-- Work 2 -->
      <div class="work-showcase-item reveal reveal-delay-1">
        <div class="work-showcase-bg" style="background: linear-gradient(135deg, #2a5a4a 0%, #14352a 100%);"></div>
        <div class="work-showcase-content">
          <span class="work-category">BRAND IDENTITY</span>
          <h2 class="work-title">長頸鹿藥師藥局</h2>
          <p class="work-desc">品牌識別設計</p>
        </div>
      </div>
      
      <!-- Work 3 -->
      <div class="work-showcase-item reveal reveal-delay-2">
        <div class="work-showcase-bg" style="background: linear-gradient(135deg, #0a2820 0%, #061a12 100%);"></div>
        <div class="work-showcase-content">
          <span class="work-category">VTUBER / IP</span>
          <h2 class="work-title">靛之森 Ainomori</h2>
          <p class="work-desc">VTuber IP 設計</p>
          <span class="work-link-external">ainomori.tw →</span>
        </div>
      </div>
      
      <!-- Work 4 -->
      <div class="work-showcase-item reveal">
        <div class="work-showcase-bg" style="background: linear-gradient(135deg, #1f4a3c 0%, #0d3d2e 100%);"></div>
        <div class="work-showcase-content">
          <span class="work-category">WEBSITE</span>
          <h2 class="work-title">Dr. Hu 皮膚科</h2>
          <p class="work-desc">品牌網站設計</p>
        </div>
      </div>
      
      <!-- Work 5 -->
      <div class="work-showcase-item reveal reveal-delay-1">
        <div class="work-showcase-bg" style="background: linear-gradient(135deg, #183328 0%, #0a2820 100%);"></div>
        <div class="work-showcase-content">
          <span class="work-category">BRAND IDENTITY</span>
          <h2 class="work-title">LHP</h2>
          <p class="work-desc">品牌識別設計</p>
        </div>
      </div>
      
      <!-- Work 6 -->
      <div class="work-showcase-item reveal reveal-delay-2">
        <div class="work-showcase-bg" style="background: linear-gradient(135deg, #142e24 0%, #071f15 100%);"></div>
        <div class="work-showcase-content">
          <span class="work-category">VISUAL DESIGN</span>
          <h2 class="work-title">高雄科工館</h2>
          <p class="work-desc">視覺設計專案</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="cta-section">
    <h2 class="cta-title reveal">想讓您的品牌成為下一個經典？</h2>
    <a href="/contact" class="btn reveal reveal-delay-1">START YOUR PROJECT</a>
  </section>
</BaseLayout>

<style>
  /* Page Hero */
  .page-hero {
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: linear-gradient(180deg, var(--forest-darkest) 0%, var(--forest-dark) 100%);
    padding-top: 100px;
  }
  
  .page-hero-label {
    font-family: 'Cinzel', serif;
    font-size: 0.8rem;
    color: var(--gold);
    letter-spacing: 0.4em;
    display: block;
    margin-bottom: 1.5rem;
  }
  
  .page-hero-title {
    font-family: 'Noto Serif TC', serif;
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 300;
    color: var(--white);
    letter-spacing: 0.2em;
    margin-bottom: 1rem;
  }
  
  .page-hero-subtitle {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.2rem;
    font-style: italic;
    color: var(--gold-light);
    letter-spacing: 0.15em;
  }
  
  /* Works Showcase */
  .works-showcase {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .work-showcase-item {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
    border: 1px solid rgba(201, 169, 98, 0.1);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    text-decoration: none;
    display: block;
  }
  
  .work-showcase-item:hover {
    border-color: var(--gold);
    transform: translateY(-10px);
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.4);
  }
  
  .work-showcase-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .work-showcase-item:hover .work-showcase-bg {
    transform: scale(1.1);
  }
  
  .work-showcase-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    background: linear-gradient(180deg, transparent 30%, rgba(6,26,18,0.9) 100%);
  }
  
  .work-category {
    font-family: 'Cinzel', serif;
    font-size: 0.7rem;
    color: var(--gold);
    letter-spacing: 0.2em;
    margin-bottom: 0.8rem;
  }
  
  .work-title {
    font-family: 'Noto Serif TC', serif;
    font-size: 1.8rem;
    font-weight: 400;
    color: var(--white);
    margin-bottom: 0.5rem;
  }
  
  .work-desc {
    font-family: 'Noto Serif TC', serif;
    font-size: 0.95rem;
    color: var(--gold-light);
    margin-bottom: 1rem;
  }
  
  .work-link,
  .work-link-external {
    font-family: 'Cinzel', serif;
    font-size: 0.75rem;
    color: var(--gold);
    letter-spacing: 0.15em;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.4s ease;
  }
  
  .work-showcase-item:hover .work-link,
  .work-showcase-item:hover .work-link-external {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .works-showcase {
      grid-template-columns: 1fr;
    }
  }
</style>
