    height: 100%;
    object-fit: cover;
    object-position: center top;
    aspect-ratio: 3/4;
    border: 1px solid rgba(201, 169, 98, 0.2);
  }
  
  /* Enhanced CTA Section */
  .cta-section-enhanced {
    padding: 12rem 4rem;
    text-align: center;
    background: linear-gradient(180deg, var(--forest-darkest) 0%, var(--forest-dark) 50%, var(--forest-darkest) 100%);
    position: relative;
    overflow: hidden;
  }
  
  .cta-deco-circles {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  
  .cta-circle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1px solid rgba(201, 169, 98, 0.08);
    border-radius: 50%;
    animation: ctaCircleRotate 40s linear infinite;
  }
  
  .cta-circle-1 { width: 400px; height: 400px; }
  .cta-circle-2 { width: 600px; height: 600px; animation-direction: reverse; animation-duration: 50s; }
