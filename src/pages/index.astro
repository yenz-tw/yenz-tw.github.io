    to { transform: translate(-50%, -50%) rotate(360deg); }
  }
  
  .cta-content {
    position: relative;
    z-index: 10;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .cta-label {
    font-family: 'Cinzel', serif;
    font-size: 0.75rem;
    color: var(--gold);
    letter-spacing: 0.4em;
    display: block;
    margin-bottom: 2rem;
  }
  
  .cta-title-enhanced {
    font-family: 'Noto Serif TC', serif;
    font-size: clamp(1.8rem, 5vw, 3rem);
