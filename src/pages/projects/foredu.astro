    position: relative;
    z-index: 10;
    padding: 0 2rem;
  }
  
  .foredu-label {
    font-family: 'Cinzel', serif;
    font-size: 0.8rem;
    color: var(--gold);
    letter-spacing: 0.4em;
    display: block;
    margin-bottom: 2rem;
    opacity: 0;
    animation: fadeInUp 1s ease 0.3s forwards;
  }
  
