<style>
  /* Foredu Hero */
  .foredu-hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: linear-gradient(180deg, #1a4d3a 0%, #0d3d2e 50%, var(--forest-darkest) 100%);
