  .vision-item p {
    font-size: 0.95rem;
    color: var(--gold-light);
    line-height: 1.8;
    opacity: 0.8;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .characters-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .vision-content {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 768px) {
    .characters-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Foredu page particle animation (leaf-like)
  const foreduCanvas = document.getElementById('foreduCanvas') as HTMLCanvasElement;
  if (foreduCanvas) {
    const ctx = foreduCanvas.getContext('2d');
    let leaves: Array<{x: number, y: number, size: number, rotation: number, speedX: number, speedY: number, rotationSpeed: number, opacity: number}> = [];
    
    function resizeCanvas() {
      foreduCanvas.width = window.innerWidth;
      foreduCanvas.height = window.innerHeight;
    }
    
    function createLeaves() {
      leaves = [];
      const count = 30;
      
      for (let i = 0; i < count; i++) {
        leaves.push({
          x: Math.random() * foreduCanvas.width,
          y: Math.random() * foreduCanvas.height,
          size: Math.random() * 15 + 5,
          rotation: Math.random() * Math.PI * 2,
          speedX: (Math.random() - 0.5) * 0.5,
          speedY: Math.random() * 0.3 + 0.1,
          rotationSpeed: (Math.random() - 0.5) * 0.02,
          opacity: Math.random() * 0.3 + 0.1
        });
      }
    }
    
    function drawLeaf(x: number, y: number, size: number, rotation: number, opacity: number) {
      if (!ctx) return;
      
      ctx.save();
      ctx.translate(x, y);
      ctx.rotate(rotation);
      ctx.globalAlpha = opacity;
      
      ctx.beginPath();
      ctx.moveTo(0, -size);
      ctx.bezierCurveTo(size * 0.5, -size * 0.5, size * 0.5, size * 0.5, 0, size);
      ctx.bezierCurveTo(-size * 0.5, size * 0.5, -size * 0.5, -size * 0.5, 0, -size);
      ctx.fillStyle = 'rgba(201, 169, 98, 0.6)';
      ctx.fill();
      
      ctx.restore();
    }
    
    function animateLeaves() {
      if (!ctx) return;
      
      ctx.clearRect(0, 0, foreduCanvas.width, foreduCanvas.height);
      
      leaves.forEach(leaf => {
        leaf.x += leaf.speedX;
        leaf.y += leaf.speedY;
        leaf.rotation += leaf.rotationSpeed;
        
        if (leaf.y > foreduCanvas.height + leaf.size) {
          leaf.y = -leaf.size;
          leaf.x = Math.random() * foreduCanvas.width;
        }
        
        if (leaf.x < -leaf.size) leaf.x = foreduCanvas.width + leaf.size;
        if (leaf.x > foreduCanvas.width + leaf.size) leaf.x = -leaf.size;
        
        drawLeaf(leaf.x, leaf.y, leaf.size, leaf.rotation, leaf.opacity);
      });
      
      requestAnimationFrame(animateLeaves);
    }
    
    window.addEventListener('resize', () => {
      resizeCanvas();
      createLeaves();
    });
    
    resizeCanvas();
    createLeaves();
    animateLeaves();
  }
</script>
