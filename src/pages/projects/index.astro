  }
  
  .csr-project-title {
    font-family: 'Noto Serif TC', serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--gold);
    margin-bottom: 0.3rem;
  }
  
  .csr-project-subtitle {
    font-family: 'Noto Serif TC', serif;
    font-size: 0.9rem;
    font-weight: 400;
    color: var(--gold-light);
    margin-bottom: 1.5rem;
  }
  
  .csr-project-desc {
    font-size: 0.95rem;
    color: var(--gold-light);
    line-height: 1.9;
    opacity: 0.8;
    margin-bottom: 1.5rem;
  }
  
  .csr-project-link {
    font-family: 'Cinzel', serif;
    font-size: 0.8rem;
    color: var(--gold);
    letter-spacing: 0.1em;
  }
  
  .csr-project-status {
    font-family: 'Noto Serif TC', serif;
    font-size: 0.85rem;
    color: var(--gold-light);
    opacity: 0.6;
  }
  
  .csr-coming-soon {
    opacity: 0.7;
  }
  
  /* Vision */
  .csr-vision {
    max-width: 800px;
    margin: 0 auto;
